@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Main";
    //<img src="~/lib/images/Michał.jpg" alt="Image of Michał Kordos" />
}
<div class="name-div mx-auto d-flex justify-content-around">
    <p>Michał Kordos<br />Portfolio</p>
</div>

<div></div>


<div class="image-div mx-auto rounded-circle">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
    </svg>
    @*<img class="mx-auto d-block" src="~/lib/images/Michał.jpg" alt="Image of Michał Kordos"/>*@
</div>

<div class="input-div container mt-5">
    <input type="text" class="form-control" placeholder="Login" />
</div>

<div class="input-div container mt-5">
    <input type="password" class="form-control" placeholder="Password" />
</div>

<a asp-controller="Main" asp-action="SingUp">
    <div class="info-div text-center hover-zoom rounded-circle">
        <div class="info">
            <h1>Don't know<br />what<br />to do?</h1>
            <p>Sing up to see my portfolio!</p>
        </div>
    </div>
</a>
